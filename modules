environments/dev/main.tf
=======================

module "dev-coreinstance" {
  source             = "../../coreinstance"
  display_name       = "devinstance"
  environment        = "dev"
  node_count         = 1
  node_type          = "ORACLELOGVM.Standard.E.2.2"
  availability_domain = ["FD1"]
}

